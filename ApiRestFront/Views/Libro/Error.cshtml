
@{
    ViewBag.Title = "Error";
    Layout = "../Shared/_Layaut_New.cshtml";
}

<div class="card">
    <div class="card-header card-header-icon card-header-warning">
        <div class="card-icon">
            <i class="material-icons">assignment</i>
        </div>
        <h4 class="card-title ">Error en la solicitud</h4>
    </div>
    <div class="card-body">
        <div class="col-12 text-center">
            <h2>Error : @ViewBag.statusCode </h2><br />
            <h4>@ViewBag.mensaje</h4>
        </div>        
        <br />
        <a href="/Libro/Index" class="btn btn-reddit">Regresar</a>
    </div>
</div>